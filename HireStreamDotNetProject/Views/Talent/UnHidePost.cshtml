@{
    ViewData["Controller"] = "Talent";
    ViewData["Action"] = "UnHidePost";
}

@model HireStreamDotNetProject.Models.JobPost

@await Html.PartialAsync("_Header", null, ViewData);

<div class="container shadow rounded mt-5 p-4" style="max-width: 500px; background: #f9f9f9;">
    <h3 class="text-center mb-4 text-primary">Active Job Post</h3>
    <div asp-validation-summary="All" class="text-center text-danger"></div> 
    <form action="" class="form-control p-4 mt-3" method="post" id="jobPostForm">
        <input type="hidden" aps-for="Id" name="post_id">
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control outline-primary" placeholder="Enter your Password to continue" minlength="8" required name="password" >
        </div>
        <button type="submit" class="btn btn-success w-100">Activate Post</button>
    </form>
</div>

