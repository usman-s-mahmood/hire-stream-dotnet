@{
    ViewData["Controller"] = "Error";
    ViewData["Action"] = "500InternalServerError";
}

@await Html.PartialAsync("_Header", null, ViewData);

<div class="container text-center">

    <div class="">
        <img src="/assets/img/500.svg" alt="500InternalServerError" class="img-fluid" style="max-width: 300px;">
    </div>

    <h1 class="display-4 text-danger"><strong>Oops! Page Not Found</strong></h1>
    <p class="lead text-muted">Internal Server Error! Please Try Again Later</p>

    <div class="text-center w-75 mx-auto">
        @await Html.PartialAsync("_SearchForm")
    </div>

    <div class="d-flex justify-content-center gap-3 mt-2">
        <a href="/Home" class="btn btn-success btn-lg">Go to Homepage</a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">Go Back</a>
    </div>
</div>
