@{
    ViewData["Controller"] = "Auth";
    ViewData["Action"] = "CreateProfile";
}

@await Html.PartialAsync("_Header", null, ViewData);

<div class="container shadow rounded mt-5 p-4">
    <h2 class="text-center">Create Your Profile</h2>
    <form action="/Auth/CreateProfile" method="POST" enctype="multipart/form-data" class="form-control p-5">
        <!-- Profile Picture -->
        <label for="profilePicture" class="form-label">Profile Picture</label>
        <input type="file" class="form-control" id="profilePicture" name="profilePicture" accept="image/*" required>
        <small class="text-muted">Upload a clear profile picture (JPEG, PNG).</small><br>

        <!-- About User -->
        <label for="aboutUser" class="form-label mt-4">About You</label>
        <textarea id="aboutUser" name="aboutUser" class="form-control" rows="4" placeholder="Write a short bio about yourself..." required></textarea>
        <small class="text-muted">Tell us something interesting about you.</small><br>

        <!-- Social Link -->
        <label for="socialLink" class="form-label mt-4">Social Media Link</label>
        <input type="url" id="socialLink" name="socialLink" class="form-control" placeholder="Enter your social media profile link" required>
        <small class="text-muted">e.g., https://www.linkedin.com/in/yourname</small><br>

        <hr class="my-4">
        <!-- Submit Button -->
        <button type="submit" class="btn btn-success w-100">Create Profile</button>
    </form>
</div>
