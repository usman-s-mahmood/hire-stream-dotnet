@{
    ViewData["Title"] = "Dashboard";
    ViewData["Controller"] = "Auth";
    ViewData["Action"] = "Dashboard";
}

@await Html.PartialAsync("_Header", null, ViewData)

<div class="container mt-5 shadow p-4 rounded bg-light">
    <h2 class="text-center mb-4">User Dashboard</h2>
    <div class="row">
        <!-- First Row -->
        <div class="col-md-4 text-center border-end">
            <!-- User Image -->
            <img src="@Url.Content(ViewData["ProfilePic"].ToString())" class="img-fluid rounded-circle mb-3" alt="User Image" style="width: 150px; height: 150px; object-fit: cover;">

            <!-- Buttons -->
            <div class="d-grid gap-2">
                <a href="/Auth/EditUser" class="btn btn-success">Edit Account</a>
                <a href="/Auth/DeleteUser" class="btn btn-danger">Delete Account</a>
                <a href="/Auth/ChangePassword" class="btn btn-secondary">Change Password</a>
            </div>
        </div>
        <div class="col-md-8 text-center">
            <!-- User Details -->
            <h4>Name: <strong>@ViewData["FirstName"] @ViewData["LastName"]</strong></h4>
            <h5>Email: <strong>@ViewData["Email"]</strong></h5>
            <h5>Username: <strong>@ViewData["Username"]</strong></h5>
        </div>
    </div>

    <!-- Second Row -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Card 1</h5>
                    <p class="card-text">Brief information about card 1.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Card 2</h5>
                    <p class="card-text">Brief information about card 2.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Card 3</h5>
                    <p class="card-text">Brief information about card 3.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Third Row -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Card 4</h5>
                    <p class="card-text">Brief information about card 4.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Card 5</h5>
                    <p class="card-text">Brief information about card 5.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Card 6</h5>
                    <p class="card-text">Brief information about card 6.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="text-center mt-4">
        <button class="btn btn-secondary">Previous</button>
        <button class="btn btn-secondary">Next</button>
    </div>
</div>
