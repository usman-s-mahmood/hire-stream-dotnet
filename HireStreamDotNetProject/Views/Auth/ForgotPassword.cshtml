@{
    ViewData["Controller"]="Auth";
    ViewData["Action"]="ForgotPassword";
}

@await Html.PartialAsync("_Header", null, ViewData);

<div class="container shadow rounded">
    <h3 class="text-center mb-4 text-primary">Forgot Password</h3>
    <form action="" class="form-control p-5" method=POST>
        <label for="" class="form-label">Your Email</label>
        <input type="email" class="form-control outline-primary" name="email" placeholder="Enter your email" required>
        <hr>
        <button class="btn btn-success">Submit</button>
        <br>
    </form>
</div>