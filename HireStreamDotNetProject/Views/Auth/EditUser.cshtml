@{
    ViewData["Controller"] = "Auth";
    ViewData["Action"] = "EditUser";
}

@await Html.PartialAsync("_Header", null, ViewData);

@model User

<div class="container">
    <form method="post" asp-action="EditUser" class="form-control">
        <div asp-validation-summary="All" class="text-center text-danger"></div> 
        <input type="hidden" asp-for="Id" />
        <label for="">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter Your First Name">
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <label for="">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" placeholder="Enter Your Last Name">
        <span class="text-danger" asp-validation-for="LastName"></span>
        <label for="">Username</label>
        <input type="text" class="form-control outline-primary" id="username" asp-for="Username" placeholder="Choose a username" minlength="8" required      pattern="^[a-z0-9.]+$" title="Username can only contain lowercase letters, numbers, and dots.">

        <span class="text-danger" asp-validation-for="Username"></span>
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Enter Your Email">
        <span class="text-danger" asp-validation-for="Email"></span>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>