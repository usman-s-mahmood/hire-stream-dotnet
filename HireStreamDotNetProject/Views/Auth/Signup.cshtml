@{
    ViewData["Controller"] = "Auth";
    ViewData["Action"] = "Signup";
}

@await Html.PartialAsync("_Header", null, ViewData);

<div class="container shadow rounded mt-5 p-4" style="max-width: 500px; background: #f9f9f9;">
    <h3 class="text-center mb-4 text-primary">Sign Up</h3>
    <div asp-validation-summary="All" class="text-center text-danger"></div> 
    <form action="/Auth/Signup" class="form-control p-4 mt-3" method="POST" id="signupForm">
        <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control outline-primary" id="first_name" name="first_name" placeholder="Enter your first name" minlength="2" required>
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control outline-primary" id="last_name" name="last_name" placeholder="Enter your last name" minlength="2" required>
        </div>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control outline-primary" id="username" name="username" placeholder="Choose a username" minlength="8" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control outline-primary" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <!-- Gender Dropdown -->
        <label for="gender" class="form-label mt-3">Gender</label>
        <select id="gender" name="gender" class="form-select outline-primary" required>
            <option value="" disabled selected>Select your gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
            <option value="Prefer not to say">Prefer not to say</option>
        </select>

        <label for="user_role" class="form-label mt-3">User Role</label>
        <select id="user_role" name="user_role" class="form-select outline-primary" required>
            <option value="" disabled selected>Select your role</option>
            <option value="recruiter">Recruiter</option>
            <option value="applicant">Applicant</option>
        </select>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control outline-primary" id="password" name="password" placeholder="Enter your password" minlength="8" required>
            <small class="text-muted">Minimum 8 characters.</small>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control outline-primary" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" minlength="8" required>
            <small id="passwordHelp" class="form-text text-danger" style="display: none;">Passwords do not match.</small>
        </div>
        <hr>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        <div class="mt-3 text-center">
            <a href="/Auth/Index" class="nav-link">Already Registered? Login</a>
        </div>
    </form>
</div>

<script>
    // Frontend validation for password match
    document.getElementById('signupForm').addEventListener('submit', function(e) {
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        const passwordHelp = document.getElementById('passwordHelp');
        
        if (password !== confirmPassword) {
            e.preventDefault(); // Prevent form submission
            passwordHelp.style.display = 'block'; // Show error message
        } else {
            passwordHelp.style.display = 'none'; // Hide error message
        }
    });
</script>


