@{
    ViewData["Title"] = "Home Page";
}


    <!-- hero section start -->
    <section class="hero bg-image position-relative bg-1"
        style="">
        <!-- Overlay -->
        <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0, 0, 0, 0.5);">
        </div>

        <!-- Content -->
        <div class="text-center text-white position-relative z-index-2">
            <h1 class="display-3 mb-4">Welcome to HireStream</h1>
            <p class="lead mb-5">Find your dream job today with ease!</p>
            <a href="#" class="btn btn-primary btn-lg me-3">Get Started</a>
            <a href="#" class="btn btn-outline-light btn-lg">Learn More</a>
        </div>
    </section>


    <!-- hero section end -->

   

    <!-- about section start -->
    <div class="container-fluid">
        <div class="container">
            <hr>
                <p class="fs-1 text-center"><strong class="text-secondary">Why Choose Us?</strong></p>
            <hr>
        </div>
        <div class="row p-5">
            <div class="col-md-4">
                <div class="card shadow-lg border-light rounded">
                    <div class="card-body">
                        
                        <div class="mb-3">
                            <img src="~/assets/img/iso-1.jpg" alt="Job Icon" style="width: 360px;">
                        </div>
                        <h5 class="card-title text-center">Secure Platform</h5>
                        <p class="card-text">Privacy matters the most and we make sure that everything remains intact and
                            secure</p>
                    </div>
                </div>
            </div>
    
            <div class="col-md-4">
                <div class="card shadow-lg border-light rounded">
                    <div class="card-body">
                       
                        <div class="mb-3">
                            <img src="~/assets/img/iso-2.jpg" alt="Job Icon" style="width: 360px;">
                        </div>
                        <h5 class="card-title text-center">Job Opportunities</h5>
                        <p class="card-text">Explore a wide range of job opportunities tailored to your skills and career goals.</p>
                    </div>
                </div>
            </div>
    
            <div class="col-md-4">
                <div class="card shadow-lg border-light rounded">
                    <div class="card-body">
                       
                        <div class="mb-3">
                            <img src="~/assets/img/iso-3.jpg" alt="Job Icon" style="width: 325px;">
                        </div>
                        <h5 class="card-title text-center">Latest Tech Stack</h5>
                        <p class="card-text">Built on industry standard frameworks for security and ease of use</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- about section end -->

    <!-- about stat counter start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 text-center p-3">
                <img src="~/assets/img/img-1.jpg" width="640" alt="">
            </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column text-center">
                <div>
                    <hr />
                    <p class="fs-4"><strong>Best Platform for job search</strong></p>
                    <hr />
                </div>
                <p>
                    HireStream is your one-stop platform for managing and tracking job applications with ease.
                    Whether you're applying for your dream job or exploring new career opportunities, HireStream
                    simplifies the process for both job seekers and employers.
                </p>
            </div>
        </div>
    </div>
    
    <!-- about stat counter end -->

    <!-- features section start -->

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column text-center">
                <div>
                    <hr />
                    <p class="fs-4"><strong>Features We Provide</strong></p>
                    <hr />
                </div>
                <p>✔ Custom Job Postings</p>
                <p>✔ Personalized Job Feed</p>
                <p>✔ Detailed Analytics</p>
                <p>✔ 24/7 Customer Support</p>
                <p>✔ Intuitive and User Friendly</p>
            </div>
            <div class="col-md-6 text-center p-3">
                <img src="~/assets/img/img-7.png" width="640" alt="">
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_Features");
    

    <!-- features end -->

    @await Html.PartialAsync("_ContactForm")

    @await Html.PartialAsync("_FAQs")

    <!-- Stat Section start -->
    <div class="container my-5">
        <section class="statistics-section">
            <h2 class="section-header">Our Impact in Numbers</h2>
            <div class="row g-4">
                <!-- Card 1 -->
                <div class="col-md-4">
                    <div class="stat-card">
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Users Icon">
                        <div class="stat-number" data-count="100000">0</div>
                        <div class="stat-text">Happy Job Seekers</div>
                    </div>
                </div>
                <!-- Card 2 -->
                <div class="col-md-4">
                    <div class="stat-card">
                        <img src="https://cdn-icons-png.flaticon.com/512/2910/2910762.png" alt="Jobs Icon">
                        <div class="stat-number" data-count="50000">0</div>
                        <div class="stat-text">Jobs Posted</div>
                    </div>
                </div>
                <!-- Card 3 -->
                <div class="col-md-4">
                    <div class="stat-card">
                        <img src="https://cdn-icons-png.flaticon.com/512/1256/1256654.png" alt="Companies Icon">
                        <div class="stat-number" data-count="2000">0</div>
                        <div class="stat-text">Partner Companies</div>
                    </div>
                </div>
                <!-- Card 4 -->
                <div class="col-md-6">
                    <div class="stat-card">
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135755.png" alt="Resume" width="64" height="64">
                        <div class="stat-number" data-count="120000">0</div>
                        <div class="stat-text">Resumes Submitted</div>
                    </div>
                </div>
                <!-- Card 5 -->
                <div class="col-md-6">
                    <div class="stat-card">
                        <img src="https://cdn-icons-png.flaticon.com/512/1006/1006482.png" alt="Success" width="64" height="64">

                        <div class="stat-number" data-count="95000">0</div>
                        <div class="stat-text">Applications Processed</div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- Stat section end -->

    <!-- partner companies section start -->
    <div class="container my-5">
        <section class="partners-section">
            <h2>Our Trusted Partners</h2>
            <div class="partner-logos">
                <div class="logo-slider">
                    <img src="https://logo.clearbit.com/google.com" alt="Google">
                    <img src="https://logo.clearbit.com/amazon.com" alt="Amazon">
                    <img src="https://logo.clearbit.com/apple.com" alt="Apple">
                    <img src="https://logo.clearbit.com/meta.com" alt="Meta">
                    <img src="https://logo.clearbit.com/netflix.com" alt="Netflix">
                    <img src="https://logo.clearbit.com/microsoft.com" alt="Microsoft">
                    <img src="https://logo.clearbit.com/cisco.com" alt="Cisco">
                    <img src="https://logo.clearbit.com/ibm.com" alt="IBM">
                    <img src="https://logo.clearbit.com/walmart.com" alt="Walmart">
                    <img src="https://logo.clearbit.com/samsung.com" alt="Samsung">
                    <img src="https://logo.clearbit.com/oracle.com" alt="Oracle">
                    <img src="https://logo.clearbit.com/intel.com" alt="Intel">
                </div>
            </div>
        </section>
    </div>
    <!-- partner companies section end -->

