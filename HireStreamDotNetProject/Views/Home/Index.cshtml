                </div>
            </div>

            <!-- Controls -->

<button class="carousel-control-prev" type="button" data-bs-target="#customerReviewsCarousel" data-bs-slide="prev">
    <span class="visually-hidden">Previous</span>
    <i class="fas fa-chevron-left fa-2x" aria-hidden="true"></i>
